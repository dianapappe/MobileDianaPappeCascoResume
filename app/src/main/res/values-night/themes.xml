<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DianaPappeCascoResume" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item> <!-- Darker shade for better visibility -->
        <item name="colorPrimaryVariant">@color/blue_700</item> <!-- Darker variant -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text and icons on primary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_500</item> <!-- Accent for night mode -->
        <item name="colorSecondaryVariant">@color/blue_gray_500</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Ensure contrast on secondary -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>